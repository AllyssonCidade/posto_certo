{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["jest", "node"],
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "generators/plopfile.js",
    "firebaseConfig.js"
  ],
  "exclude": ["node_modules"]
}
